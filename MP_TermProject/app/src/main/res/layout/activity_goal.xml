<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="2dp"
    android:background="#F5FAFA"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="#ACD1E9"
        android:orientation="horizontal"
        android:padding="2dp">

        <Button
            android:id="@+id/setGoalbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickSetGoal"
            android:text="목표 설정"


            />

        <Button
            android:id="@+id/goalRefresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180sp"
            android:onClick="onClickGoalRefresh"
            android:text="새로 고침" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="#ACD1E9"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="20sp"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="-목표-"
            android:textSize="20sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250sp"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:background="#ACD1E9"
        android:orientation="vertical"
        android:padding="2dp">


        <TextView
            android:id="@+id/showGoalTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/showGoalcontets"
            android:layout_width="wrap_content"
            android:layout_height="300dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:background="#ACD1E9"
        android:orientation="horizontal"
        android:padding="20sp">

        <ImageView
            android:id="@+id/showResultiv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/showResulttv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button
        android:id="@+id/deleteGoalBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="250sp"
        android:onClick="onClickDeleteGoal"
        android:text="목표 삭제" />
</LinearLayout>
