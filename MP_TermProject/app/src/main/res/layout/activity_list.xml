<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5FAFA"
    android:orientation="vertical"
    android:layout_margin="2dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#ACD1E9"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_margin="2dp"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/Text_StartDay"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:gravity="center"
            android:inputType="number"
            android:onClick="onclickstart"
            android:textSize="17dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text=" ~ "
            android:textColor="#000000"
            android:textSize="5mm" />

        <TextView
            android:id="@+id/Text_EndDay"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:gravity="center"
            android:inputType="number"
            android:onClick="onclickend"
            android:textSize="17dp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#ACD1E9"
        android:orientation="horizontal"
        android:padding="20sp"
        android:layout_margin="2dp"
        android:gravity="center"
        >

        <Spinner
            android:id="@+id/mainCategoryspinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/mainSpinnerContents">


        </Spinner>

        <Spinner
            android:id="@+id/subCategoryspinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/subSpinnerContentsCategory">


        </Spinner>

        <Button
            android:id="@+id/spinnerShowbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickspinnerShowbtn"
            android:text="Show" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400sp"
        android:background="#ACD1E9"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:padding="20sp"
        android:layout_margin="2dp"
        android:gravity="center"
        >

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="400sp"

            >


            <TextView
                android:id="@+id/showListTv"
                android:layout_width="match_parent"
                android:layout_height="400sp"
                android:text=""
                android:textStyle="bold" />

        </ScrollView>
    </LinearLayout>
    >
</LinearLayout>

